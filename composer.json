{
	"name": "bluespice/bookshelfui",
	"type": "mediawiki-extension",
	"description": "User interface to manage hierarchical collections of wikipages.",
	"license": "GPL-3.0-only",
	"extra": {
		"installer-name": "BlueSpiceBookshelfUI"
	},
	"require": {
		"composer/installers": "~1.0"
	},
	"autoload": {
		"psr-4": {
			"BlueSpice\\BookshelfUI\\": "src"
		}
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "26.0.0",
		"mediawiki/minus-x": "0.3.1",
		"php-parallel-lint/php-console-highlighter": "0.3.2",
		"php-parallel-lint/php-parallel-lint": "1.0.0"
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor --exclude node_modules",
			"minus-x check .",
			"phpcs -p -s"
		],
		"fix": [
			"minus-x fix .",
			"phpcbf"
		]
	}
}
